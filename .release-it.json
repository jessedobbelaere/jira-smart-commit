{
  "hooks": {
    "before:release": [
      "npx auto-changelog --latest-version ${version} --ignore-commit-pattern \"^ðŸ”– Release\" --commit-limit false --hide-credit --template https://raw.githubusercontent.com/release-it/release-it/master/templates/keepachangelog.hbs",
      "git add CHANGELOG.md"
    ]
  },
  "git": {
    "commitMessage": "ðŸ”– Release ${version}",
    "tagName": "${version}"
  },
  "github": {
    "release": true,
    "releaseNotes": "npx auto-changelog --latest-version ${version} --stdout --ignore-commit-pattern \"^ðŸ”– Release\" --commit-limit false --hide-credit --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
  }
}
